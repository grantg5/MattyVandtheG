<%= form_for :post, url: posts_path do |f| %>
	<p>
		<%= f.label :title %></br>
		<%= f.text_field :title %>
	</p>
	
	<!--As user functionality is added, author and title fields will be replaced with checking who's logged in.
		However it's here currently for testing purposes.-->
	<p>
		<%= f.label :author %></br>
		<%= f.text_field :author %>
	</p>
	
	<p>
		<%= select_date Date::today, :prefix => 'date' %>
	</p>
	
	<p>
		<%= f.label :content %></br>
		<%= f.text_area :content %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
<% end %>